#!/bin/sh

# Window 0: code
tmux rename-window code
tmux split-window -h -p 100
tmux split-window -v -p 20
tmux split-window -h -p 20
tmux clock-mode

# Window 1: terminal
tmux new-window -n terminal
tmux split-window -h -p 50
tmux select-pane -t0

# Select correct pane & clean up
tmux select-window -p
tmux select-pane -t1
tmux kill-pane -t0
